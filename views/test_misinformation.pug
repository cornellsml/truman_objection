extends ui_layout

block styles 
  link(type='text/css', rel='stylesheet', href='/public/css/test.css')
  link(type='text/css', rel='stylesheet', href='/public/css/jquery.highlight-within-textarea.css')

block content
  .eleven.wide.column.centered
    .ui.fluid.card      
      //- .image
        //- iframe(width='100%' height='568' src='https://www.youtube.com/embed/0bXmNBl9Xbg' title='YouTube video player' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
      video(src='/post_pictures/Objection_Video.mp4' width='100%' controls type='video/mp4')
      .content
        .description
          h2 FDA granted full approval to the Pfizer vaccine 
          .viewCount-div 
            i.icon.user
            p watching &#183; Aug 29, 2021
            p.viewCount &#32;8&#32;
          p.description.short
            b Description: 
            | This week, the FDA granted full approval to the Pfizer vaccine. Will that make a difference for vaccine-hesitant Americans? Dr. Irwin Redlener, founding director of the National Center for Disaster Preparedness at Columbia University and a MSNBC Public Health Analyst, joined NBC’s Joshua Johnson to discuss the process behind full FDA approval and its possible impact on vaccination rates.
          a.showMoreLess SHOW MORE
      .ui.five.bottom.attached.buttons
        .ui.labeled.button
          .ui.upvote.button(tabindex='0')
            i.thumbs.up.icon
            | Upvote
          a.ui.basic.green.left.pointing.label 2
        .ui.labeled.button
          .ui.downvote.button(tabindex='0')
            i.thumbs.down.icon
            | Downvote
          a.ui.basic.red.left.pointing.label 4
        .ui.reply.button(tabindex='0')
            i.comment.icon
            | Comment
        .ui.flag.button
          i.flag.icon
          | Flag
        .ui.share.button(tabindex='0')
          i.share.icon
          | Share
    .ui.form
      .inline.field
        img.ui.image.rounded(src='/profile_pictures/genericphoto1.png')
        textarea.replyToVideo(name='replyToVideo' type='text' placeholder='Add a Comment...' rows='1')
      .ui.submit.button.replyToVideo
          | Comment
      .ui.cancel.basic.blue.button.replyToVideo
          | Cancel
    .ui.comments
        //- h3.ui.dividing.header Comments
        //- .ui.form
        //-   .inline.field
        //-     a.avatar
        //-       img.ui.image.rounded.replyToVideo(src='/profile_pictures/genericphoto1.png')
        //-     textarea.replyToVideo(name='replyToVideo' type='text' placeholder='Add a Comment...' rows='1')
        //-   .ui.submit.button.replyToVideo
        //-       | Comment
        //-   .ui.cancel.basic.blue.button.replyToVideo
        //-       | Cancel
        .comment.incomingComment.hidden
          a.avatar
            img(src='/profile_pictures/15.png')
          .content
            a.author Sarah P.
            .metadata
              span.date Just now
            .text
              | That is interesting
            .actions
              a.upvote
                i.icon.thumbs.up
                span.num 0
              a.downvote
                i.icon.thumbs.down
                span.num 0
              a.reply 
                | Reply
              a.flag 
                | Flag
              a.share 
                | Share
        .comment
          a.avatar
            img(src='/profile_pictures/3.jpg')
          .content
            a.author Matt
            .metadata
              span.date Today at 5:42PM
            .text
              | That's great
            .actions
              a.upvote
                i.icon.thumbs.up
                span.num 1
              a.downvote

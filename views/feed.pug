extends ui_layout

block styles 
  link(type='text/css', rel='stylesheet', href='/public/css/feed.css')
  link(type='text/css', rel='stylesheet', href='/public/css/jquery.highlight-within-textarea.css')

block content
  .computer.only.tablet.only.three.wide.column.centered
  .eight.wide.column.centered
    .ui.fluid.card      
      //- .image
        //- iframe(width='100%' height='568' src='https://www.youtube.com/embed/0bXmNBl9Xbg' title='YouTube video player' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
      video(src='/post_pictures/Objection_Video.mp4' width='100%' controls type='video/mp4')
      .content
        .description
          h2 FDA granted full approval to the Pfizer vaccine 
          .viewCount-div 
            i.icon.user
            p watching &#183; Aug 29, 2021
            p.viewCount &#32;8&#32;
          p.description.short
            b Description: 
            | This week, the FDA granted full approval to the Pfizer vaccine. Will that make a difference for vaccine-hesitant Americans? Dr. Irwin Redlener, founding director of the National Center for Disaster Preparedness at Columbia University and a MSNBC Public Health Analyst, joined NBCâ€™s Joshua Johnson to discuss the process behind full FDA approval and its possible impact on vaccination rates.
          a.showMoreLess SHOW MORE
      .largeScreen
        .ui.bottom.attached.buttons
          .ui.labeled.button
            .ui.upvote.button(tabindex='0', data-tooltip="I like this", data-position="bottom center", data-variation="mini")
              i.thumbs.up.icon
              | Upvote
            a.ui.basic.green.left.pointing.label 2
          .ui.labeled.button
            .ui.downvote.button(tabindex='0', data-tooltip="I dislike this", data-position="bottom center", data-variation="mini")
              i.thumbs.down.icon
              | Downvote
            a.ui.basic.red.left.pointing.label 4
          .ui.reply.button
              i.comment.icon
              | Comment
          .ui.flag.button(tabindex='0', data-tooltip="Report", data-position="bottom center", data-variation="mini")
            i.flag.icon
            | Flag
          .ui.share.button(tabindex='0', data-tooltip="Share", data-position="bottom center", data-variation="mini")
            i.share.icon
            | Share
      .mediumScreen.hidden
        .ui.bottom.attached.buttons
          .ui.labeled.button
            .ui.upvote.button(tabindex='0', data-tooltip="I like this", data-position="bottom center", data-variation="mini")
              i.thumbs.up.icon
              | Upvote
            a.ui.basic.green.left.pointing.label 2
          .ui.labeled.button
            .ui.downvote.button(tabindex='0', data-tooltip="I dislike this", data-position="bottom center", data-variation="mini")
              i.thumbs.down.icon
              | Downvote
            a.ui.basic.red.left.pointing.label 4
        .ui.bottom.attached.buttons
          .ui.reply.button
              i.comment.icon
              | Comment
          .ui.flag.button(tabindex='0', data-tooltip="Report", data-position="bottom center", data-variation="mini")
            i.flag.icon
            | Flag
          .ui.share.button(tabindex='0', data-tooltip="Share", data-position="bottom center", data-variation="mini")
            i.share.icon
            | Share
    .ui.form
      .inline.field
        .image
          img.ui.image.rounded#replaceOnLoad
        textarea.replyToVideo(name='replyToVideo' type='text' placeholder='Add a Comment...' rows='1')
      .ui.submit.button.replyToVideo
          | Comment
      .ui.cancel.basic.blue.button.replyToVideo
          | Cancel
    .ui.comments
        .comment#actor1
          .image
            a.avatar
              img
          .content
            a.author
            .metadata
              span.date
            .text
              | That's great
            .actions
              a.upvote
                i.icon.thumbs.up
                span.num
              a.downvote
                i.icon.thumbs.down
                span.num
              a.reply 
                | Reply
              a.flag 
                | Flag
              a.share 
                | Share
        .comment#actor2
          .image
            a.avatar
              img
          .content
            a.author
            .metadata
              span.date
            .text
              p#offense
            .actions
              a.upvote
                i.icon.thumbs.up
                span.num
              a.downvote
                i.icon.thumbs.down
                span.num
              a.reply 
                | Reply
              a.flag 
                | Flag
              a.share
                | Share
          .comments
            .comment#actor3
              .image
                a.avatar
                  img
              .content
                a.author
                .metadata
                  span.date
                .text#objection
                .actions
                  a.upvote
                    i.icon.thumbs.up
                    span.num
                  a.downvote
                    i.icon.thumbs.down
                    span.num
                  a.reply 
                    | Reply
                  a.flag 
                    | Flag
                  a.share 
                    | Share
        .comment#actor4
          .image
            a.avatar
              img
          .content
            a.author
            .metadata
              span.date
            .text
              | Ah so sweet, the tears of the unvaccinated
            .actions
              a.upvote
                i.icon.thumbs.up
                span.num
              a.downvote
                i.icon.thumbs.down
                span.num
              a.reply 
                | Reply
              a.flag 
                | Flag
              a.share 
                | Share
    .ui.small.shareVideo.modal
      .ui.icon.header
        i.share.icon
        |     You have shared this video!
      .content(style='text-align:center;')
        h3(style='text-align:left;') Note: The "Copy Link" feature is currently disabled. 
        h4(style='text-align:left;') However, we keep track of all the links you would like to share, and at the end of the study, we will give you a list of those links so you can share them. 
        .ui.left.labeled.button.large.centered
          .ui.basic.label.pathname
        .ui.icon.button(data-tooltip="Copy Link (DISABLED)", data-position="bottom center", data-variation="mini")
          i.copy.icon
      .actions   
        .ui.green.ok.inverted.button
          i.checkmark.icon
          |   Done
    .ui.small.shareComment.modal
      .ui.icon.header
        i.share.icon
        |     You have shared this comment!
      .content(style='text-align:center;')
        h3(style='text-align:left;') Note: The "Copy Link" feature is currently disabled. 
        h4(style='text-align:left;') However, we keep track of all the links you would like to share, and at the end of the study, we will give you a list of those links so you can share them. 
        .ui.left.labeled.button.large.centered
          .ui.basic.label.pathname
        .ui.icon.button(data-tooltip="Copy Link (DISABLED)", data-position="bottom center", data-variation="mini")
          i.copy.icon
      .actions   
        .ui.green.ok.inverted.button
          i.checkmark.icon
          |   Done
  .computer.only.tablet.only.three.wide.column.centered
    .ui.fixed.bottom.sticky.notificationPopup.hidden#desktopPopup(correspondingpost=0)
     .ui.info.message#actor5
       i.close.icon
       .ui.feed
        .event
          .label
            img.popupNotificationImage
          .content
            .summary 
              span.author
              | commented on the video: "That is interesting".


